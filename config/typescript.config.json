{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["../src/*"],
      "@components/*": ["../components/*"],
      "@navigation/*": ["../navigation/*"],
      "@assets/*": ["../assets/*"]
    }
  },
  "include": [
    "../**/*.ts",
    "../**/*.tsx",
    "../**/*.js",
    "../**/*.jsx"
  ],
  "exclude": [
    "../node_modules",
    "../android",
    "../ios",
    "../.expo"
  ]
} 